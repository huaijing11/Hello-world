    <script>
        function revealMessage() {
            const msg = document.getElementById('message');
            if (msg.style.display === 'none' || msg.style.display === '') {
                msg.style.display = 'block';
                console.log('定一系统已激活');
            } else {
                msg.style.display = 'none';
            }
        }
        
        // 控制台彩蛋
        console.log('%c定一重启', 'font-size: 20px; color: #64b5f6;');
        console.log('%c44岁，不是终点，是起点。', 'font-size: 12px; color: #90caf9;');
        console.log('GitHub: github.com/[你的用户名]/dingyi-restart');
    </script>
